{
	"watch": {
		"build": {
			"patterns": [
				"core"
			],
			"extensions": "html",
			"quiet": false
		}
	},
	"scripts": {
		"build": "TAILWIND_MODE=build npx tailwindcss -i static/css/tailwind.css -o static/css/style.css --minify",
		"watch": "TAILWIND_MODE=watch npx tailwindcss -i static/css/tailwind.css -o static/css/style.css --watch"
	},
	"devDependencies": {
		"autoprefixer": "^10.4.19",
		"postcss": "^8.4.38",
		"postcss-cli": "^11.0.0",
		"tailwindcss": "^3.4.4"
	}
}
